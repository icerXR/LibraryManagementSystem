<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.BOOK_NEEDED"
    android:orientation="vertical"
    >


    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建DB"
        android:onClick="create_DB">
    </Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插入"
        android:onClick="insert_DB">
    </Button>  -->

      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="查看缺书单"
          android:onClick="visit_DB">
      </Button>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="0dp"
              android:layout_weight="0.5"
              android:layout_height="30dp"
              android:background="@drawable/background"
              android:text="book_name">

          </TextView>
          <TextView
              android:layout_width="0dp"
              android:layout_weight="0.5"
              android:layout_height="30dp"
              android:background="@drawable/background"
              android:text="book_number">

          </TextView>
      </LinearLayout>
      <ListView
          android:id="@+id/book_needed_listview"
          android:layout_width="match_parent"
          android:layout_height="150dp"
          >

      </ListView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="5dp"
        >

    </Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="50dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="填写订单"
            android:id="@+id/order_edit_button"
            android:onClick="order_edit">

        </Button>
        <Button
            android:layout_width="50dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="生成订单"
            android:id="@+id/order_generate_button"
            android:onClick="order_generate">

        </Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="30dp"
            android:background="@drawable/background"
            android:text="book_name">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="30dp"
            android:background="@drawable/background"
            android:text="book_number">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="30dp"
            android:background="@drawable/background"
            android:id="@+id/book_order_name_edit"
            >

        </EditText>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="30dp"
            android:background="@drawable/background"
            android:id="@+id/book_order_number_edit"
            android:inputType="number"
            >

        </EditText>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="5dp">
    </Button>
    <ListView
        android:id="@+id/book_order_listview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

    </ListView>

  </LinearLayout>